 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmpReManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmpReManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- DataTables CSS for Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.datatables.net/v/bs5/dt-2.1.8/datatables.min.css">
    <!--toastr-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <style>
        body {
            margin-bottom: 0 !important;           
        }
        #scrollbar {           
            width: 0;
            height: 6px;
           /*  background: linear-gradient(to right, #4CAF50, #2196F3); */ /* Gradient colors */
          /*   background: linear-gradient(to right, #FF4C4C, #FFB6C1); */
            background:red;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 9999;
            border-radius: 10px; /* Rounded corners */
            transition: width 0.1s ease-in-out; /* Smooth transition */           
        }
        li{
            font-size:14px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100" style="position:sticky; top:0;">
                    <a class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-6 d-none d-sm-inline">Employee Management System</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link align-middle px-0 text-white">
                                <i class="fs-4 bi bi-house-fill"></i><span class="ms-1 d-none d-sm-inline">Dashborad</span>
                            </a>
                        </li>
                        <li>
                            <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-white">
                                <i class="fs-4 bi bi-people-fill"></i><span class="ms-1 d-none d-sm-inline">Employees</span>
                            </a>
                            <ul class="collapse show nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                                <li>
                                    <a asp-controller="Employee" asp-action="Add" class="nav-link px-0 text-white"> Add Employee </a>
                                </li>
                                <li class="w-100">
                                    <a asp-controller="Employee" asp-action="Index" class="nav-link px-0 text-white">Employee List</a>
                                </li>                             
                                <li>
                                    <a asp-controller="ImportEmployee" asp-action="ImportEmployee" class="nav-link px-0 text-white"> Import Employee </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-white">
                                <i class="fs-4 bi bi-building-fill-gear"></i><span class="ms-1 d-none d-sm-inline">Department</span>
                            </a>
                            <ul class="collapse show nav flex-column ms-1" id="submenu2" data-bs-parent="#menu">
                                <li>
                                    <a asp-controller="Department" asp-action="Add" class="nav-link px-0 text-white"> Add Department </a>
                                </li>
                                <li class="w-100">
                                    <a asp-controller="Department" asp-action="Index" class="nav-link px-0 text-white">Department List</a>
                                </li>                             
                                <li>
                                    <a asp-controller="ImportDepartment" asp-action="ImportDepartment" class="nav-link px-0 text-white"> Import Department </a>
                                </li>
                                <li>
                                    <a asp-controller="Department" asp-action="DepartmentConsolidateReport" class="nav-link px-0 text-white"> Consolidated Report </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a asp-controller="ContactUs" asp-action="Contact" class="nav-link px-0 text-white">
                                <span class="ms-1 d-flex align-items-center gap-2"><i class="fs-4 bi bi-envelope"> </i> Contact Us</span>
                            </a>

                            @* <a href="#submenu3" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-white">
                                <span class="ms-1 d-none d-sm-inline"><i class="fs-4 bi bi-envelope"></i> Contact Us</span>
                            </a>
                            <ul class="collapse show nav flex-column ms-1" id="submenu3" data-bs-parent="#menu">
                                <li>
                                    <a asp-controller="ContactUs" asp-action="Contact" class="nav-link px-0 text-white">Contact</a>
                                </li>
                            </ul> *@
                        </li>
                        <li>
                            <a asp-controller="UserLoginRegistration" asp-action="LogOut" class="nav-link px-0 text-white">
                                <span class="ms-1 d-flex align-items-center gap-2"> <i class="fs-4 bi bi-box-arrow-right"></i></i> Logout</span>
                            </a>                         
                        </li>
                    </ul>
                    <hr>
                </div>
            </div>
            <div class="col py-3" id="scrollArea" style="background:#F3F2F1">
                <div id="scrollbar"></div>
                @RenderBody()
            </div>
        </div>

    </div>
    @*  <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2024 - EmpReManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>   
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

@*Scroll detect *@
    <script>
          window.onscroll = function() {
          var html = document.documentElement;
          var scroll_top = html.scrollTop;
          var height = html.scrollHeight - html.clientHeight;
          var unit = (scroll_top / height) * 100;
          document.getElementById("scrollbar").style.width = unit + "%";
          }         
    </script>
    <!-- DataTables JS for Bootstrap 5 -->
    <partial name="_DataTable" />
</body>
</html>
